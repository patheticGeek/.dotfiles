// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "git_panel": {
    "dock": "right"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "icon_theme": "Bearded Icon Theme",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "auto_signature_help": true,
  "show_signature_help_after_edits": true,
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Bearded Theme Black Amethyst"
  },
  "tabs": {
    "git_status": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": false
  },
  "buffer_font_family": "Iosevka",
  "terminal": {
    "cursor_shape": "bar",
    "blinking": "on",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "format_on_save": "prettier",
  "file_scan_exclusions": [
    "**/node_modules",
    // default values below
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "auto_install_extensions": {
    "astro": true,
    "bearded": true,
    "cargo-appraiser": true,
    "docker-compose": true,
    "elixir": true,
    "git-firefly": true,
    "html": true,
    "kotlin": true,
    "live-server": true,
    "lua": true,
    "markdown-oxide": true,
    "prisma": true,
    "scss": true,
    "svelte": true,
    "vue": true,
    "xml": true,
    "zig": true,
    "basher": true,
    "bearded-icon-theme": true,
    "csv": true,
    "dockerfile": true,
    "env": true,
    "graphql": true,
    "java": true,
    "latex": true,
    "log": true,
    "make": true,
    "php": true,
    "proto": true,
    "sql": true,
    "toml": true,
    "wakatime": true,
    "xy-zed": true
  }
}
